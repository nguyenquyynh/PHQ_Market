<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fragment_Cart"
    android:padding="25dp"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/rlt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:textSize="18dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" user"
            android:textColor="@color/navigation_selected"
            android:textSize="18dp"
            android:layout_toRightOf="@id/tvHello"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Cart"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/icNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/showpass"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        tools:listitem="@layout/layout_item_cart"
        android:layout_above="@id/rlt3"
        android:layout_below="@+id/rlt1"/>


    <RelativeLayout
        android:id="@+id/rlt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rlt2"
        android:layout_marginBottom="40dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Enter your promo code"
                android:background="@drawable/radius" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:text=">"
            android:padding="0dp"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            android:backgroundTint="@color/button_login"
            app:cornerRadius="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCheckOut">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:textColor="@color/text_color"
            android:textSize="25dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tvCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.835.000VND"
            android:textSize="25dp"
            android:textColor="@color/navigation_selected"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnCheckOut"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Check out"
        android:backgroundTint="@color/button_login"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        app:cornerRadius="10dp"/>
</RelativeLayout>